@model Projeto.Models.Rating

@{
   ViewData["Title"] = "Criar";
}

<h1>Avaliar o estabelecimento</h1>
<hr />

<div class="row">
   <div class="col-md-4">
      <form asp-action="Create" method="post">

         @* espaço para mostrar as mensagens de erro gerais  *@
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>

         @*Selecionar quem é o utilizador a fazer a avaliação*@
         <div class="form-group">
            <label asp-for="UserFK" class="control-label"></label>
            @* dropdown *@
            <select asp-for="UserFK"
                    class="form-control"
                    asp-items="ViewBag.Users">
            </select>
         </div>

         @*Selecionar quem é o estabelecimento a fazer a avaliação*@
         <div class="form-group">
            <label asp-for="EstablishmentFK" class="control-label"></label>
            @* dropdown *@
            <select asp-for="EstablishmentFK"
                    class="form-control"
                    asp-items="ViewBag.Establishments">
            </select>
         </div>

         @*Selecionar quem é o estabelecimento a ser avaliado*@
         @*Comentar e Dar estrelas*@
         <div class="form-group">
             <label asp-for="Stars" class="control-label"></label>
            <select class="form-select" asp-for = "Stars">
              <option value="1">1</option>
              <option value="1.5">1.5</option>
              <option value="2">2</option>
              <option value="2.5">2.5</option>
              <option value="3">3</option>
              <option value="3.5">3.5</option>
              <option value="4">4</option>
              <option value="4.5">4.5</option>
              <option value="3">5</option>

            </select>
            <span asp-validation-for="Stars" class="text-danger"></span>
        </div>

         <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
         </div>

      </form>
   </div>
</div>

<div>
   <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
   @{
      await Html.RenderPartialAsync("_ValidationScriptsPartial");
   }
}