@model IEnumerable<Projeto.Models.Establishment>


@{
    ViewData["Title"] = "Home Page";
    var photos = ViewData["Photos"] as IEnumerable<Photo>; 
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeEstablishment)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.ListPhotos)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeEstablishment)
            </td>
                @*Listar as fotografias do estabelecimento*@
                @foreach (var photo in photos)
                {
                    @if (item.Id == photo.EstablishmentFK)
                    {
                        <img src="~/Photos/User/@photo.Name" height="20px" width="20px"/>
                    }
                    else
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.ListPhotos)
                        </td> 
                    }
                }
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
            </tr>

}
    </tbody>
</table>


<a asp-action="Create">Create</a>
