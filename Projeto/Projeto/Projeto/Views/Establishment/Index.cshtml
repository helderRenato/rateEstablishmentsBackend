@model IEnumerable<Projeto.Models.Establishment>


@{
    ViewData["Title"] = "Home Page";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeEstablishment)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.ListPhoto)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeEstablishment)
            </td>
                @*Verificar se o estabelecimento possui fotografia*@
                @if(item.ListPhoto != null && item.ListPhoto.Count > 0)
                {
                    @foreach (var photo in item.ListPhoto)
                    {
                        <img src="~/Photos/User/@photo.Name"/>
                    }
                }
                else
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.ListPhoto)
                    </td> 
                }
            </tr>

}
    </tbody>
</table>


<a asp-action="Create">Create</a>
