@model Projeto.Models.Establishment; 

@{
   ViewData["Title"] = "Adicionar Fotografia";
}

<h1>Adicionar Fotografia</h1>

<hr />


<div class="row">
   <div class="col-md-4">
      <form asp-action="AddPhoto" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Name"/>
        <input type="hidden" asp-for="Email"/>
        <input type="hidden" asp-for="City"/>
        <input type="hidden" asp-for="Address"/>
        <input type="hidden" asp-for="Phone"/>
        <input type="hidden" asp-for="TypeEstablishment"/>
        <input type="hidden" asp-for="Password"/>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label">Fotografia</label>
            <input class="form-control"
                   type="file"
                   accept=".jpg,.jpeg,.png"
                   name="foto"
                   required/>
         </div>

         <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
         </div>
      </form>
   </div>
</div>

<div>
   <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
   @{
      await Html.RenderPartialAsync("_ValidationScriptsPartial");
   }
}